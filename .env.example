# App
APP_NAME="Ataxx Zero API"
APP_ENV="development"
APP_DEBUG=false
APP_HOST="127.0.0.1"
APP_PORT=8000
APP_LOG_LEVEL="INFO"
APP_LOG_JSON=true
APP_LOG_REQUESTS=true
APP_DOCS_ENABLED=true
# CORS: JSON array, e.g. ["http://localhost:5173","https://your-frontend.com"]
APP_CORS_ORIGINS=[]
APP_CORS_ALLOW_CREDENTIALS=true
APP_CORS_ALLOW_METHODS=["*"]
APP_CORS_ALLOW_HEADERS=["*"]

# Database (Option A: full DSN)
# DATABASE_URL="postgresql+asyncpg://postgres:password@localhost:5432/ataxx_zero"

# Database (Option B: components)
DB_HOST="localhost"
DB_PORT=5432
DB_NAME="ataxx_zero"
DB_USER="postgres"
DB_PASSWORD="change_me"
DB_TIMEZONE="UTC"

# SQLAlchemy pool/runtime
DB_ECHO=false
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT_S=30
DB_POOL_RECYCLE_S=1800

# Supabase (optional for now)
SUPABASE_URL=""
SUPABASE_ANON_KEY=""
SUPABASE_SERVICE_ROLE_KEY=""

# Inference defaults
MODEL_CHECKPOINT_PATH="checkpoints/last.ckpt"
INFERENCE_MODE_DEFAULT="fast"   # fast | strong
INFERENCE_DEVICE="auto"         # auto | cpu | cuda
INFERENCE_MCTS_SIMS=160
INFERENCE_C_PUCT=1.5

# Auth / JWT
AUTH_JWT_SECRET="change_me_with_a_long_random_secret"
AUTH_JWT_ALGORITHM="HS256"
AUTH_ACCESS_TOKEN_TTL_MINUTES=30
AUTH_REFRESH_TOKEN_TTL_DAYS=14
AUTH_RATE_LIMIT_ENABLED=true
AUTH_LOGIN_RATE_LIMIT_REQUESTS=10
AUTH_LOGIN_RATE_LIMIT_WINDOW_S=60
AUTH_REFRESH_RATE_LIMIT_REQUESTS=20
AUTH_REFRESH_RATE_LIMIT_WINDOW_S=60
